<h2>Contacts</h2>
<%= form_tag("/search", method: "get") do %>
  <%= label_tag(:search, "Search contacts:") %>
  <%= text_field_tag(:search) %>
  <%= submit_tag("Search") %>
<% end %>
<%= link_to "Create new contact", new_contact_path %>
<% if @contacts.any? %>
<ul>
	<% @contacts.each do |contact| %>
	<li>
		<%= link_to contact.name, contact_path(contact) %>
	</li>
	<% end %>
</ul>
<% end %>