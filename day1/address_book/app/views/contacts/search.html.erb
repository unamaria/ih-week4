<h2><%= @contacts_search.count %> results for <%= @search %></h2>
<% if @contacts_search.any? %>
<ul>
	<%= @contacts_search.each do |contact| %>
	<li>
		<%= link_to contact.name, contact_path(contact) %>
	</li>
	<% end %>
</ul>
<% else %>
<p>No <em><%= @search %></em> in your address book yet!</p>
<% end %>

<p><%= link_to 'Back to all contacts', '/contacts' %></p>