<h2>Paste the link you want to shorten</h2>

<%= form_tag(links_path, method: "post") do %>
		<%= text_field_tag :original_url %>
		<%= submit_tag 'Shorten' %>
<% end %>

<% flash.each do |key, value| %>
		<%= content_tag :div, value, class: "flash-info" %>
	<% end %>

<% if @links.any? %>
<table>
	<tr>
		<th>Original url</th>
		<th>Short url</th>
	</tr>
	<% @links.each do |link| %>
	<tr>
		<td><%= link.original_url %></td>
		<td><%= link_to 'http://localhost:3000/' + link.short_url, link.short_url %></td>
	</tr>
	<% end %>
</table>
<% else %>
<p>No links yet</p>
<% end %>